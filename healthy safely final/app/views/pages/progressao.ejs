<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Progressão</title>
    <link rel="stylesheet" href="../css/progressao.css" />
  </head>
  <body>
    <%- include('../partials/header.ejs') %>

    <main>
      <section class="topo">
        <h1>Progressão de Horas</h1>
        <p>Adicione valores e veja sua evolução diária!</p>
      </section>

      <!-- Gráfico 1 -->
      <section class="grafico-horas" data-grafico="graficoSono">
        <h2>Regulagem de sono (horas):</h2>
        <div class="grafico-container" id="graficoHoras" data-max="12">
          <div class="linha" data-h="12"><span>12h</span></div>
          <div class="linha" data-h="10"><span>10h</span></div>
          <div class="linha" data-h="8"><span>8h</span></div>
          <div class="linha" data-h="6"><span>6h</span></div>
          <div class="linha" data-h="4"><span>4h</span></div>
          <div class="linha" data-h="2"><span>2h</span></div>
          <div class="linha" data-h="0"><span>0h</span></div>
        </div>
        <div class="input-area">
          <input
            type="number"
            min="0"
            max="12"
            step="0.1"
            placeholder="Digite horas (0-12)"
          />
          <button class="btn-adicionar">Adicionar</button>
        </div>
      </section>

      <!-- Gráfico 2 -->
      <section class="grafico-horas" data-grafico="graficoMental">
        <h2>Saúde mental de 1 a 10:</h2>
        <div class="grafico-container" id="graficoMental" data-max="10">
          <div class="linha" data-h="10"><span>10</span></div>
          <div class="linha" data-h="8"><span>8</span></div>
          <div class="linha" data-h="6"><span>6</span></div>
          <div class="linha" data-h="4"><span>4</span></div>
          <div class="linha" data-h="2"><span>2</span></div>
          <div class="linha" data-h="0"><span>0</span></div>
        </div>
        <div class="input-area">
          <input
            type="number"
            min="0"
            max="12"
            step="0.1"
            placeholder="Digite horas (0-12)"
          />
          <button class="btn-adicionar">Adicionar</button>
        </div>
      </section>

      <!-- Gráfico 3 -->
      <section class="grafico-horas" data-grafico="graficoExercicios">
        <h2>Atividade fisica (min)</h2>
        <div class="grafico-container" id="graficoExercicios" data-max="12">
          <div class="linha" data-h="12"><span>+180min</span></div>
          <div class="linha" data-h="10"><span>180min</span></div>
          <div class="linha" data-h="8"><span>150min</span></div>
          <div class="linha" data-h="6"><span>120min</span></div>
          <div class="linha" data-h="4"><span>90min</span></div>
          <div class="linha" data-h="2"><span>60min</span></div>
          <div class="linha" data-h="0"><span>0min</span></div>
        </div>
        <div class="input-area">
          <input
            type="number"
            min="0"
            max="12"
            step="0.1"
            placeholder="Digite horas (0-12)"
          />
          <button class="btn-adicionar">Adicionar</button>
        </div>
      </section>

      <!-- Orientaçoes dos profissionais-->
      <section class="orientacao">
        <button
          class="btn-orientacao"
          onclick="window.location.href='/orientacao'"
        >
          Ver orientações de profissionais
          <p>sobre seu desenvolvimento</p>
        </button>
      </section>
    </main>

    <script src="../js/grafico.js"></script>

    <%- include('../partials/footer.ejs') %>
  </body>
</html>
