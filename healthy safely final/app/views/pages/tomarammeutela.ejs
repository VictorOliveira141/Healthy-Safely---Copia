    <script>
    const slides = document.getElementById('slides-ml');
    const prevBtn = document.getElementById('btn-prev');
    const nextBtn = document.getElementById('btn-next');
    const produtoWidth = 260; // 240px card + 20px gap
    let posicao = 0;

    prevBtn.addEventListener('click', () => {
        posicao += produtoWidth;
        if (posicao > 0) {
            posicao = -(produtoWidth * (slides.children.length - 4));
        }
        slides.style.transform = `translateX(${posicao}px)`;
    });

    nextBtn.addEventListener('click', () => {
        posicao -= produtoWidth;
        const limite = -(produtoWidth * (slides.children.length - 4));
        if (posicao < limite) {
            posicao = 0;
        }
        slides.style.transform = `translateX(${posicao}px)`;
    });
    </script>
    
