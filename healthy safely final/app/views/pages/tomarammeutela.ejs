  <body>
    <%- include('../partials/header.ejs') %>
    <section class="carousel-container">
      <section class="carousel-slide active">
        <img
          class="banneracesso"
          src="../imagem/bannerzaodeacessoo.PNG"
          alt="Banner de Acesso Healthy Safely"
        />
      </section>
      <section class="carousel-slide">
        <img
          class="bannerprogresso"
          src="../imagem/1x/bannerprogresso.png"
          alt="Banner de Progresso Healthy Safely"
        />
      </section>
      <section class="botao">
        <article class="carousel-btn prev" aria-label="Anterior">
          &#10094;
        </article>
        <article class="carousel-btn next" aria-label="Próximo">
          &#10095;
        </article>
      </section>

      <nav class="carousel-dots">
        <span class="dot active"></span>
        <span class="dot"></span>
      </nav>
    </section>

    <script>
      let i = 0,
        s = document.querySelectorAll(".carousel-slide"),
        d = document.querySelectorAll(".dot");
      function show(n) {
        s.forEach((e, j) => e.classList.toggle("active", j == n));
        d.forEach((e, j) => e.classList.toggle("active", j == n));
        i = n;
      }
      document.querySelector(".next").onclick = (_) => show((i + 1) % s.length);
      document.querySelector(".prev").onclick = (_) =>
        show((i - 1 + s.length) % s.length);
      d.forEach((e, j) => (e.onclick = (_) => show(j)));
      setInterval(() => show((i + 1) % s.length), 5000);
    </script>

