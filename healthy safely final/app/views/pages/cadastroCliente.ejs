<html>
  <head>
    <title>Cadastro</title>
    <link rel="stylesheet" href="../css/cliente.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
  </head>

  <body>
    <%- include('../partials/header.ejs') %>

    <main>
      <!-- Lado esquerdo-->
      <section class="lado-esquerdo"></section>
      <!-- Fim lado esquerdo-->

      <!-- Lado direito com formulário -->
      <section class="lado-direito">
        <article class="container">
          <form action="/cadastroCliente" method="POST" class="quadrado">
            <h1>Faça seu cadastro</h1>
            <button type="submit" id="btnClique" class="google">
              <section>
                <img src="../imagem/google.png" class="googleimg" />
                <span>Continue com Google</span>
              </section>
            </button>

            <article class="formulario">
              <h2>Dados de acesso</h2>
              <article>
                <input
                  type="text"
                  id="nome"
                  name="nome"
                  placeholder="Digite seu nome"
                  value="<%= valores.nome %>"
                  class="<%= erroValidacao.nome %>"
                />
                <span class="msgErro"><%= msgErro.nome %></span>
              </article>

              <section>
                <input
                  type="text"
                  id="email"
                  name="email"
                  placeholder="Digite seu e-mail"
                  value="<%= valores.email %>"
                  class="<%= erroValidacao.email %>"
                />
                <span class="msgErro"><%= msgErro.email %></span>
              </section>

              <article>
                <label for="data">Data de Nascimento:</label>
                <input
                  type="date"
                  id="data"
                  name="data"
                  value="<%= valores.data %>"
                  class="<%= erroValidacao.data %>"
                />
                <span class="msgErro"><%= msgErro.data %></span>
              </article>

              <section>
                <input
                  type="password"
                  id="senha"
                  name="senha"
                  placeholder="Digite sua senha"
                  value="<%= valores.senha %>"
                  class="<%= erroValidacao.senha %>"
                />
                <span class="msgErro"><%= msgErro.senha %></span>

                <br />
                <label>
                  Sua senha deve conter: <br />
                  ✔ uma letra maiúscula <br />
                  ✔ um número <br />
                  ✔ um caractere especial
                </label>
              </section>

              <section>
                <label for="confirmar-senha">Confirmar senha:</label>
                <input type="password" id="confirmar-senha"
                name="confirmar-senha" placeholder="Confirme sua senha"
                value="<%= valores["confirmar-senha"] %>" class="<%=
                erroValidacao["confirmar-senha"] %>" />
                <span class="msgErro"><%= msgErro["confirmar-senha"] %></span>
              </section>

              <h1 class="login">
                Já possui uma conta? Faça seu <a href="/login">login</a>
              </h1>

              <button type="submit" id="btnClique" class="juntar">
                Juntar-se
              </button>
            </article>
          </form>
        </article>
      </section>
      <!-- Fim lado direito com formulário -->
    </main>

    <%- include('../partials/footer.ejs') %>
  </body>
</html>
