<html>
  <head>
    <title>Healthy Safely | Cadastro Colaborador</title>
    <link rel="stylesheet" href="../css/cadastro.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <link rel="icon" href="../imagem/Logo repaginado 2.png" />
  </head>

  <body>
    <!--HEADER-->
    <%- include('../partials/header.ejs') %>
    <!---->

    <main class="main">
      <article class="card" aria-labelledby="titulo-login">
        <!-- Formulário -->
        <section class="form-area">
          <form action="/cadastroColaborador" method="POST" novalidate>
            <h1 class="form-title">Cadastro de Colaborador</h1>

            <!-- Login via Google -->
            <a
              class="btn-google"
              href="/auth/google"
              role="button"
              aria-label="Entrar com Google"
            >
              <i class="bi bi-google icone-google"></i>
              <span>Continuar com Google</span>
            </a>

            <div class="or" aria-hidden="true">ou</div>

            <!-- Nome do Responsável e Nome da Farmácia -->
            <article class="inputs-duplos">
              <div>
                <label class="textos">Nome do Responsável</label>
                <input
                  id="nome"
                  name="nome"
                  type="text"
                  placeholder="Digite seu Nome"
                  value="<%= valores.nome %>"
                  class="<%= erroValidacao.nome ? 'erro-input' : '' %>"
                />
                <span class="msg-erro"><%= msgErro.nome %></span>
              </div>
              <div>
                <label class="textos">Nome da Farmácia</label>
                <input
                  id="nomeFarmacia"
                  name="nomeFarmacia"
                  type="text"
                  placeholder="Nome da sua Farmácia"
                  value="<%= valores.nomeFarmacia %>"
                  class="<%= erroValidacao.nomeFarmacia ? 'erro-input' : '' %>"
                />
                <span class="msg-erro"><%= msgErro.nomeFarmacia %></span>
              </div>
            </article>

            <!-- Nome de usuário e E-mail -->
            <article class="inputs-duplos">
              <div>
                <label class="textos">Nome de Usuário</label>
                <input
                  id="nomeusuario"
                  name="nomeusuario"
                  type="text"
                  placeholder="Escolha um nome de usuário"
                  value="<%= valores.nomeusuario %>"
                  class="<%= erroValidacao.nomeusuario ? 'erro-input' : '' %>"
                />
                <span class="msg-erro"><%= msgErro.nomeusuario %></span>
              </div>
              <div>
                <label class="textos">E-mail Profissional</label>
                <input
                  id="email"
                  name="email"
                  type="email"
                  placeholder="Digite seu E-mail"
                  value="<%= valores.email %>"
                  class="<%= erroValidacao.email ? 'erro-input' : '' %>"
                />
                <span class="msg-erro"><%= msgErro.email %></span>
              </div>
            </article>

            <!-- CNPJ (sozinho) -->
            <div>
              <label class="textos">CNPJ</label>
              <input
                id="CNPJ"
                name="CNPJ"
                type="text"
                placeholder="Digite o CNPJ"
                value="<%= valores.CNPJ %>"
                class="<%= erroValidacao.CNPJ ? 'erro-input' : '' %>"
              />
              <span class="msg-erro"><%= msgErro.CNPJ %></span>
            </div>

            <!-- Senha e Confirmar Senha -->
            <article class="inputs-duplos">
              <div>
                <label class="textos">Senha</label>
                <div class="campo-senha">
                  <input
                    id="senha"
                    name="senha"
                    type="password"
                    placeholder="Crie uma Senha"
                    value="<%= valores.senha %>"
                    class="<%= erroValidacao.senha ? 'erro-input' : '' %>"
                  />
                  <button
                    type="button"
                    class="btn-olho"
                    onclick="toggleSenha('senha')"
                    aria-label="Mostrar senha"
                  >
                    <i class="bi bi-eye-slash-fill"></i>
                  </button>
                </div>
                <span class="msg-erro"><%= msgErro.senha %></span>
              </div>
              <div>
                <label class="textos">Confirmar Senha</label>
                <div class="campo-senha">
                  <input
                    id="confirmarSenha"
                    name="confirmarSenha"
                    type="password"
                    placeholder="Confirme sua Senha"
                    value="<%= valores.confirmarSenha %>"
                    class="<%= erroValidacao.confirmarSenha ? 'erro-input' : '' %>"
                  />
                  <button
                    type="button"
                    class="btn-olho"
                    onclick="toggleSenha('confirmarSenha')"
                    aria-label="Mostrar senha"
                  >
                    <i class="bi bi-eye-slash-fill"></i>
                  </button>
                </div>
                <span class="msg-erro"><%= msgErro.confirmarSenha %></span>
              </div>
            </article>

            <div class="actions">
              <button class="btn-primary" type="submit">Criar Conta</button>
            </div>

            <p class="small">
              Quer se tornar um Cliente?
              <a href="/cadastroCliente" class="link-cadastro"
                >Cadastra-se como um cliente!</a
              >
            </p>
            <p class="small">
              Já é colaborador?
              <a href="/login" class="link-cadastro">Faça login.</a>
            </p>
          </form>
        </section>
      </article>
    </main>

    <!--- FOOTER --->
    <%- include('../partials/footer.ejs') %>
    <!---->

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="../js/validacao-front-end.js"></script>
    <script src="../js/ver-senha.js"></script>
  </body>
</html>
