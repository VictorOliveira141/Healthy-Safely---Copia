            </section>

            <!-- CHAT 2 -->
            <section id="especialista2" class="content-box">
              <article class="especialista">
                <button class="sair-chat">
                  <i class="bi bi-arrow-left"></i>
                </button>
                <img src="../imagem/mathmvb.jpg" alt="Ortopedista Alison" />
                <section class="info">
