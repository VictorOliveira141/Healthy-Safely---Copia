    <script>
      // Flip card: toggle .is-flipped on click; button stops propagation and navigates
      (function(){
        const cards = document.querySelectorAll('.tpcnt-card');
        cards.forEach(card=>{
          card.addEventListener('click', ()=> card.classList.toggle('is-flipped'));
          card.addEventListener('keydown', e=>{ if(e.key==='Enter' || e.key===' '){ e.preventDefault(); card.classList.toggle('is-flipped'); }});
        });

        const buttons = document.querySelectorAll('.tpcnt-card .btn-criar');
        buttons.forEach(btn=>{
          btn.addEventListener('click', e=>{
            e.stopPropagation();
            const tgt = btn.getAttribute('data-target') || '#';
            if(tgt && tgt !== '#') window.location.href = tgt;
          });
        });
      })();
