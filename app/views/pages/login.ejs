<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Healthy Safely | Login</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/cadastro.css" />
  </head>

  <body>
    <!--HEADER-->
    <%- include('../partials/header.ejs') %>
    <!---->
    <%- include('../partials/menu-inferior.ejs') %>

    <main>
      <article class="card" aria-labelledby="titulo-login">
        <section class="form-area">
          <form
            action="/login"
            method="POST"
            novalidate
            aria-labelledby="titulo-login"
          >
            <h1 id="titulo-login" class="form-title">Entrar na sua conta</h1>

            <a
              class="btn-google"
              href="#"
              role="button"
              aria-label="Entrar com Google"
            >
              <i class="bi bi-google icone-google"></i>
              <span>Continuar com Google</span>
            </a>

            <section class="or" aria-hidden="true">ou</section>

            <section>
              <label class="textos" for="email"
                >E-mail ou Nome de Usuário</label
              >
              <input
                id="email"
                name="email"
                type="email"
                placeholder="seu@exemplo.com"
                value="<%= valores ? valores.email || '' : '' %>"
                class="<%= erroValidacao && erroValidacao.email ? 'erro-input' : '' %>"
                autocomplete="email"
              />
              <span class="msg-erro"
                ><%= msgErro && msgErro.email ? msgErro.email : '' %></span
              >
            </section>

            <section class="espaco-campo">
              <label class="textos" for="senha">Senha</label>
              <section class="campo-senha">
                <input
                  id="senha"
                  name="senha"
                  type="password"
                  placeholder="Sua senha"
                  class="<%= erroValidacao && erroValidacao.senha ? 'erro-input' : '' %>"
                  autocomplete="current-password"
                />
                <button
                  type="button"
                  class="btn-olho"
                  onclick="toggleSenha('senha')"
                  aria-label="Mostrar senha"
                >
                  <i class="bi bi-eye-slash-fill"></i>
                </button>
              </section>
              <span class="msg-erro"
                ><%= msgErro && msgErro.senha ? msgErro.senha : '' %></span
              >
            </section>

            <% if (typeof erro !== 'undefined' && erro) { %>
            <section
              style="
                color: #ff6b6b;
                font-size: 13px;
                background-color: rgba(255, 107, 107, 0.05);
                padding: 10px;
                border-radius: 6px;
                margin-bottom: 12px;
                border-left: 3px solid #ff6b6b;
              "
            >
              <%= erro %>
            </section>
            <% } %>

            <section class="actions">
              <button class="btn-primary" type="submit">Entrar</button>
            </section>
            <p class="small">
              Esqueceu sua senha? <a class="link-muted" href="#"> Recupere!</a>
            </p>

            <p class="small">
              Ainda não tem uma conta? Cadastra-se como um
              <a href="/cadastrocliente" class="link-cadastro">Cliente </a> ou
              <a href="/cadastrocolaborador" class="link-cadastro"
                >Colaborador</a
              >.
            </p>
          </form>
        </section>
      </article>
    </main>

    <!--FOOTER-->
    <%- include('../partials/footer.ejs') %>
    <!---->

    <script>
      function toggleSenha(inputId) {
        const input = document.getElementById(inputId);
        const btnOlho = event.target.closest(".btn-olho");
        const icone = btnOlho.querySelector("i");

        if (input.type === "password") {
          input.type = "text";
          icone.classList.remove("bi-eye-slash-fill");
          icone.classList.add("bi-eye-fill");
        } else {
          input.type = "password";
          icone.classList.remove("bi-eye-fill");
          icone.classList.add("bi-eye-slash-fill");
        }
      }
    </script>
  </body>
</html>
