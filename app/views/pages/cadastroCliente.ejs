<html>
  <head>
    <title>Healthy Safely | Cadastro</title>
    <link rel="stylesheet" href="../css/cadastro.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <link rel="icon" href="../imagem/Logo repaginado 2.png" />
  </head>

  <body>
    <!--HEADER-->
    <%- include('../partials/header.ejs') %>
    <!---->

    <main class="main">
      <article class="card" aria-labelledby="titulo-login">
        <!-- Formulário -->
        <section class="form-area">
          <form action="/cadastroCliente" method="POST" novalidate>
            <h1 class="form-title">Criar Conta</h1>

            <!-- Login via Google (link para backend de OAuth) -->
            <a
              class="btn-google"
              href="/auth/google"
              role="button"
              aria-label="Entrar com Google"
            >
              <i class="bi bi-google icone-google"></i>
              <span>Continuar com Google</span>
            </a>

            <div class="or" aria-hidden="true">ou</div>

            <!-- Nome -->

            <div>
              <label class="textos">Nome de Usuário</label>
              <input
                id="nome"
                name="nome"
                type="text"
                placeholder="Crie um Nome de Usuário"
                value="<%= valores ? valores.nome || '' : '' %>"
                class="<%= erroValidacao && erroValidacao.nome ? 'erro-input' : '' %>"
              />
              <span class="msg-erro"
                ><%= msgErro && msgErro.nome ? msgErro.nome : '' %></span
              >
            </div>

            <!-- Email -->
            <div>
              <label class="textos">E-mail</label>
              <input
                id="email"
                name="email"
                type="email"
                placeholder="Digite seu Endereço de E-mail"
                value="<%= valores ? valores.email || '' : '' %>"
                class="<%= erroValidacao && erroValidacao.email ? 'erro-input' : '' %>"
              />
              <span class="msg-erro"
                ><%= msgErro && msgErro.email ? msgErro.email : '' %></span
              >
            </div>

            <!-- Senha -->
            <div>
              <label class="textos">Senha</label>
              <div class="campo-senha">
                <input
                  id="senha"
                  name="senha"
                  type="password"
                  placeholder="Crie uma Senha"
                  class="<%= erroValidacao && erroValidacao.senha ? 'erro-input' : '' %>"
                />
                <button
                  type="button"
                  class="btn-olho"
                  onclick="toggleSenha('senha')"
                  aria-label="Mostrar senha"
                >
                  <i class="bi bi-eye-slash-fill"></i>
                </button>
              </div>
              <span class="msg-erro"
                ><%= msgErro && msgErro.senha ? msgErro.senha : '' %></span
              >
            </div>

            <!-- Confirmar senha -->
            <div>
              <label class="textos">Confirmar senha</label>
              <div class="campo-senha">
                <input
                  id="confirmarSenha"
                  name="confirmarSenha"
                  type="password"
                  placeholder="Confirme sua Senha"
                  class="<%= erroValidacao && erroValidacao.confirmarSenha ? 'erro-input' : '' %>"
                />
                <button
                  type="button"
                  class="btn-olho"
                  onclick="toggleSenha('confirmarSenha')"
                  aria-label="Mostrar senha"
                >
                  <i class="bi bi-eye-slash-fill"></i>
                </button>
              </div>
              <span class="msg-erro"
                ><%= msgErro && msgErro.confirmarSenha ? msgErro.confirmarSenha
                : '' %></span
              >
            </div>

            <div class="actions">
              <button class="btn-primary" type="submit">Criar Conta</button>
            </div>

            <p class="small">
              Quer se tornar um colaborador?
              <a href="/cadastroColaborador" class="link-cadastro"
                >Cadastra-se como um colaborador!</a
              >
            </p>

            <p class="small">
              Já tem uma conta?
              <a href="/login" class="link-cadastro">Faça login.</a>
            </p>
          </form>
        </section>
      </article>
    </main>

    <!--FOOTER-->
    <%- include('../partials/footer.ejs') %>
    <!---->

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="../js/validacao-front-end.js"></script>
    <script src="../js/ver-senha.js"></script>
  </body>
</html>
